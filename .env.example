# ===== TELEGRAM API =====
# Credentials для чтения чатов (получить на my.telegram.org)
API_ID=your_api_id
API_HASH=your_api_hash

# ===== TELEGRAM BOT =====
# Токен бота для отправки уведомлений (получить у @BotFather)
BOT_TOKEN=your_bot_token

# ===== USER SETTINGS =====
# ID пользователя для уведомлений
USER_ID=your_user_id

# Чаты для мониторинга (через запятую)
CHATS=pvz_zamena

# ===== SERVER =====
HOST=0.0.0.0
PORT=8002

# ===== PATHS =====
DB_PATH=workers.db
LOG_PATH=workers_service.log
SESSION_PATH=workers_session

# ===== PARSING =====
# Сколько дней истории парсить при запуске
PARSE_HISTORY_DAYS=3

# ===== BLACKLIST (Черный список) =====
# Дефолтный чат ЧС (добавляется автоматически при первом запуске)
# Дополнительные чаты можно добавить через API: POST /blacklist/chats/add
BLACKLIST_CHAT=@Blacklist_pvz
# Отдельная сессия для поиска в ЧС (не конфликтует с основным парсером)
BLACKLIST_SESSION_PATH=blacklist_session
